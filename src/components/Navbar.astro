---
import { Image } from "@astrojs/image/components";
import logo from "../assets/branding/logo-red.png";
import NavButton from "./NavButton.astro";
import NavLink from "./NavLink.astro";
---

<nav
  class="z-[999] sticky top-0 bg-white text-red-100 flex items-center px-8 py-5"
>
  <a href="/"
    ><Image
      src={logo}
      alt="emu logo"
      height={50}
      class="transition ease-out hover:-translate-y-[2px]"
    />
  </a>

  <div class="grow"></div>

  <label>
    <input type="checkbox" id="hamburger" class="hidden" />
    <a class="z-0 md:hidden cursor-pointer"><i class="fa-solid fa-bars"></i></a>
  </label>

  <div
    id="links"
    class="bg-white transition ease-out hidden md:flex gap-5 items-center absolute md:static top-[5.5rem] left-0 px-3 pb-3 md:px-0 md:pb-0 w-full md:w-auto"
  >
    <NavLink href="/">Home</NavLink>
    <NavLink href="/sponsors">Sponsors</NavLink>
    <NavLink href="/about">About</NavLink>
    <NavLink href="/contact">Contact</NavLink>
    <NavButton href="/join">Join</NavButton>
  </div>
</nav>

<script>
  const hamburger = document.getElementById("hamburger");
  const links = document.getElementById("links");

  hamburger.onclick = () => {
    if (links.classList.contains("hidden")) {
      links.classList.remove("hidden");
    } else {
      links.classList.add("hidden");
    }
  };
</script>
