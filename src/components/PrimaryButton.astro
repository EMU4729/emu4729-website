---
export interface Props {
  href: string;
}

const { href } = Astro.props as Props;
---

<a
  class="hover:border-red-60 hover:bg-red-60 w-fit rounded-lg border-2 border-red-100 bg-red-100 px-4 py-3 font-bold text-white transition ease-out hover:-translate-y-[2px]"
  href={href}
>
  <slot />
</a>
