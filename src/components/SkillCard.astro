---
import ResponsiveImage from "./ResponsiveImage.astro";

export interface Props {
  title: string;
  image: ImageMetadata;
}

const { title, image } = Astro.props as Props;
---

<div
  class="border-1 border-gray-70 dark:border-gray-30 rounded-lg overflow-hidden flex flex-col md:flex-row self-center min-h-56 max-w-4xl fade-in-up"
>
  <ResponsiveImage
    src={image}
    alt={title}
    class="aspect-square object-cover md:w-auto md:max-w-1/3"
  />
  <div class="p-5 flex flex-col gap-1">
    <span class="text-lg">
      <slot name="icon" />
    </span>
    <h3 class="font-bold text-2xl">{title}</h3>
    <p class="text-md text-gray-40 dark:text-gray-70">
      <slot name="description" />
    </p>
  </div>
</div>
