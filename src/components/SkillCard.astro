---
import ResponsiveImage from "./ResponsiveImage.astro";

export interface Props {
  title: string;
  image: ImageMetadata;
}

const { title, image } = Astro.props as Props;
---

<div
  class="border-gray-70 dark:border-gray-30 fade-in-up flex min-h-56 max-w-4xl flex-col self-center overflow-hidden rounded-lg border-1 md:flex-row"
>
  <ResponsiveImage
    src={image}
    alt={title}
    class="aspect-square object-cover md:w-auto md:max-w-1/3"
  />
  <div class="flex flex-col gap-1 p-5">
    <span class="text-lg">
      <slot name="icon" />
    </span>
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="text-md text-gray-40 dark:text-gray-70">
      <slot name="description" />
    </p>
  </div>
</div>
