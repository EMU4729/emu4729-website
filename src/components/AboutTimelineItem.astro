---
export interface Props {
  time: string;
  title: string;
}

const { time, title } = Astro.props as Props;
---

<div
  class="border-gray-80 dark:border-gray-30 fade-in-up flex flex-col gap-1 rounded-lg border-1 p-3 text-left"
>
  <h3 class="text-gray-50">{time}</h3>
  <h2 class="text-2xl font-bold">{title}</h2>
  <p class="text-gray-40 dark:text-gray-70 text-lg">
    <slot />
  </p>
</div>
