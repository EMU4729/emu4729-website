---
export interface Props {
  time: string;
  title: string;
}

const { time, title } = Astro.props as Props;
---

<div
  class="border-[1px] border-gray-80 p-3 rounded-lg flex flex-col gap-1 text-left fade-in-up"
>
  <h3 class="text-gray-50">{time}</h3>
  <h2 class="font-bold text-2xl">{title}</h2>
  <p class="text-lg text-gray-40">
    <slot />
  </p>
</div>
